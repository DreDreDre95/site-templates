%footer
  .row
    #contact.small-12.large-6.columns
      .row
        .small-12.large-12.columns
          %h1 ___{{ site.name }}

          {% editable_text newsletter %}
          %p
            About the designer: Blaz Robar is a graphic designer from Melbourne, Australia. More information about him <a href="http://www.blazrobar.com">here</a>.
          {% endeditable_text %}

      %form{ action: '{{ contents.emails.public_submission_url }}', method: 'POST' }
        {% csrf_param %}
        .row.collapse
          %input{ type: 'hidden', value: '/email-registered', name: 'success_callback' }
          %input{ type: 'hidden', value: '/index', name: 'error_callback' }

          .small-11.medium-11.columns
            %input{ type: 'text', name: 'content[email]', placeholder: 'Join our email newsletter', class: '{% if email.errors.size > 0 %}error{% endif %}' }>
            {% if email.errors %}
            %small.error> {{ email.errors | first | last | capitalize }}
            {% endif %}
          .small-1.medium-1.columns
            %span.postfix.radius
              %i.fa.fa-envelope


    #social.large-5.large-offset-1.columns
      {% block social %}
      %a.rss{ href: '{% editable_text rss, format: raw, line_break: false, rows: 1 %}http://www.locomotivecms.com/articles{% endeditable_text %}' }
        %i.fa.fa-rss

      %a.twitter{ href: '{% editable_text twitter, format: raw, line_break: false, rows: 1 %}https://twitter.com/locomotivecms{% endeditable_text %}' }
        %i.fa.fa-twitter

      %a.dribbble{ href: '{% editable_text dribbble, format: raw, line_break: false, rows: 1 %}http://dribbble.com/blazrobar{% endeditable_text %}' }
        %i.fa.fa-dribbble

      %a.linkedin{ href: '{% editable_text linkedin, format: raw, line_break: false, rows: 1 %}http://www.linkedin.com/in/didier31{% endeditable_text %}' }
        %i.fa.fa-linkedin

      {% endblock %}

